{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["xo", "prettier"],
  "overrides": [
    {
      "extends": ["xo-typescript", "prettier"],
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "no-unused-vars": "error",
        "@typescript-eslint/consistent-type-definitions": [
          "error",
          "interface"
        ],
        "no-implicit-coercion": "off",
        "new-cap": [
          "error",
          {
            "capIsNewExceptions": ["Router"]
          }
        ]
      }
    },
    {
      "files": ["**/models/**/*.ts"],
      "rules": {
        "@typescript-eslint/naming-convention": "off",
        "no-console": "error"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  }
}
